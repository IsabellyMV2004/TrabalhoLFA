<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.trabalholfa.Representacao1">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Representação 1 - Expressões Regulares (ER)" />
         <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Alfabeto" />

            <TextField fx:id="txtAlfabeto" layoutX="10.0" layoutY="50.0" promptText="Digite seu alfabeto aqui" />
         <Label layoutX="82.0" layoutY="50.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Expressões Regulares">
            <font>
               <Font size="10.0" />
            </font>
         </Label>
         <TextField fx:id="txtExpressao" layoutX="10.0" layoutY="50.0" promptText="Digite sua expressão regular aqui" />
            <Button onAction="#executarER" text="Executar" />

            <Label text="Saída:" />
            <TextArea fx:id="txtSaida" editable="false" prefHeight="200" />

            <Button onAction="#voltar" text="Voltar" />
        </VBox>
    </children>
</AnchorPane>
