<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.trabalholfa.Representacao2">

    <!-- Barra de ferramentas em cima -->
    <top>
        <ToolBar>
            <items>
                <ToggleButton text="Selecionar" fx:id="selectBtn" />
                <ToggleButton text="Estado" fx:id="stateBtn" />
                <ToggleButton text="Transição" fx:id="transBtn" />
                <Separator orientation="VERTICAL"/>
                <Button text="Salvar .jff" fx:id="saveBtn" />
                <Button text="Carregar .jff" fx:id="loadBtn" />
            </items>
        </ToolBar>
    </top>

    <!-- Canvas onde desenha os estados/transições -->
    <center>
        <Pane fx:id="canvasArea" style="-fx-background-color: white;"/>
    </center>

</BorderPane>
